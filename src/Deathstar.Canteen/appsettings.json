{
  "Slackbot": {
    "Token": "",
    "Username": "testbot"
  },
  "connectionString": "mongodb://localhost",
  "chat": [
    {
      "regex": "[jJ]eff [vV]ader",
      "response": "https://www.youtube.com/watch?v=Sv5iEK-IEzw"
    }
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{ThreadId}] [{Level}] {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  }
}
